# Server settings
PORT=10000
API_KEY=your_secret_api_key_here

# Target credentials
TARGET_USERNAME=your_target_email
TARGET_PASSWORD=your_target_password

# Payment details
CREDIT_CARD_NUMBER=1234567890123456
CREDIT_CARD_EXPIRY_MONTH=12
CREDIT_CARD_EXPIRY_YEAR=2025
CREDIT_CARD_CVV=123
CREDIT_CARD_POSTAL_CODE=12345

# Shipping details
SHIPPING_FIRST_NAME=John
SHIPPING_LAST_NAME=Doe
SHIPPING_ADDRESS=123 Main St
SHIPPING_CITY=Anytown
SHIPPING_STATE=CA
SHIPPING_ZIP=12345
SHIPPING_PHONE=5551234567

# Stagehand is used for browser automation
STAGEHAND_LOCAL=true

# If STAGEHAND_LOCAL=false, these are required:
# BROWSERBASE_API_KEY=your_browserbase_api_key
# BROWSERBASE_PROJECT_ID=your_browserbase_project_id
# OPENAI_API_KEY=your_openai_api_key

# Slack integration (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0123456789
SLACK_SIGNING_SECRET=your_slack_signing_secret

# For Slack slash commands integration
STAGEHAND_API_ENDPOINT=http://localhost:10000
# STAGEHAND_API_KEY should match the API_KEY above

# Checkout behavior
COMPLETE_ORDER=false  # Set to true to actually place the order at checkout

# Browser configuration
HEADLESS=true  # Set to false to see the browser UI
