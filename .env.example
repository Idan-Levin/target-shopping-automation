# Server settings
PORT=3000  # Port the server will listen on
API_KEY=your_secret_api_key_here  # Secret key for triggering automation

# Target credentials
TARGET_USERNAME=your_email@example.com
TARGET_PASSWORD=your_password

# Payment details
CREDIT_CARD_NUMBER=1234567890123456
CREDIT_CARD_EXPIRY_MONTH=12
CREDIT_CARD_EXPIRY_YEAR=2025
CREDIT_CARD_CVV=123
CREDIT_CARD_POSTAL_CODE=12345

# Shipping details
SHIPPING_FIRST_NAME=John
SHIPPING_LAST_NAME=Doe
SHIPPING_ADDRESS=123 Main St
SHIPPING_CITY=Anytown
SHIPPING_STATE=CA
SHIPPING_ZIP=12345
SHIPPING_PHONE=5551234567

# Stagehand/LLM configuration
OPENAI_API_KEY=your_openai_api_key_here
# Uncomment if using another provider
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GROQ_API_KEY=your_groq_api_key

# BrowserBase configuration (only needed if USE_LOCAL_BROWSER=false)
BROWSERBASE_API_KEY=your_browserbase_key_here
BROWSERBASE_PROJECT_ID=your_project_id_here

# Slack integration (OPTIONAL - for status updates)
# If not configured properly, the app will function without sending Slack notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token  # Bot Token with chat:write permissions
SLACK_CHANNEL_ID=C0123456789  # Channel ID to post status updates to

# Checkout behavior
COMPLETE_ORDER=false  # Set to true to actually place the order at checkout

# Browser configuration
HEADLESS=true  # Set to false to see the browser UI
